{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 10
    },
    "rules": {
        "semi": ["error", "always"],
        "eol-last": "error",
        "no-trailing-spaces": "error",
        "space-before-function-paren": ["error", "always"],
        "no-constant-condition": ["error", {"checkLoops": false}],
        "prefer-const": "error"
    },
    "overrides": [
        {
            "files": ["test/*.js"],
            "env": {
                "mocha": true
            }
        }
    ]
}